<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user dashboard</title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #b1d6ee;
            color: #fff;
            padding: 30px;
            text-align: center;
            display: flex;
            align-items: center;
            /* Vertically center items */
            position: relative;
            /* Make header relative for positioning pseudo-elements */
        }

        .options {
            background-color: #b1d6ee;
            color: #fff;
            padding: 40px;
            width: 200px;
            position: fixed;
            top: 130px;
            right: 0;
        }

        .options ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .options li {
            margin-bottom: 30px;
        }

        .options a {
            display: block;
            background-color: #274a8a;
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
        }

        .options a:hover {
            background-color: #05115a;
        }

        .content {
            padding: 20px;
        }

        /* Adjust logo size */
        header img {
            width: 100px;
            height: auto;
            margin-right: 20px;
            /* Add some space between logo and text */
        }

        .welcome-text {
            font-size: 24px;
            margin-left: 20px;
            /* Add some space between logo and text */
            color: #205274;
        }

        /* Style circles */
        .random-circles {
            position: absolute;
            top: 0;
            right: 0;
            width: 50%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        .big-circle {
            position: absolute;
            background-color: #274a8a;
            width: 600px;
            height: 400px;
            border-radius: 50%;
            left: 30%;
            top: 60%;
            transform: translate(-50%, -50%);
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .big-circle img {
            width: 100%;
            height: auto;
            position: absolute;
            z-index: -1;
            object-fit: cover;
            /* Ensure the image covers the entire area */
        }

        .big-circle p:first-of-type {
            color: #fff;
            text-align: center;
            padding: 40px;
            font-size: 24px;
        }

        .shape {
            position: absolute;
            background-color: #274a8a;
            border-radius: 50%;
        }
    </style>
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light navbar-transparent">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="logo.png" alt="Logo"> <!-- Replace "your-logo.png" with your logo image URL -->
                <span class="welcome-text">Welcome to SkyReserve</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="big-circle">
                    <img src="plane.png" alt="Plane">
                    <p><b><i>Dive into our services</i></b>Ready to embark on your next adventure? Don't hesitate, book
                        your flight today with our convenient airline booking system. Click on <b>VIEW FLIGHTS</b> to
                        book your flight. </p>
                </div>
            </div>
            <div class="col-lg-4">
                <nav class="options">
                    <ul>
                        <li><a href="#">My Account</a></li>
                        <li><a href="#">View Flights</a></li>
                        <li><a href="#">My Flights</a></li>
                        <li><a href="#" onclick="showHelp()">Help</a></li>
                        <li><a href="\" onclick="confirmLogout()">Log Out</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>


    <script>
        // Generate and position multiple circles on the right side of the header after the middle of the header
        const header = document.querySelector('header');
        const headerWidth = header.offsetWidth;
        const headerHeight = header.offsetHeight;
        const midpoint = headerWidth / 2;

        for (let i = 0; i < 50; i++) {
            const shape = document.createElement('div');
            shape.classList.add('shape');
            const size = Math.random() * 20 + 5; // Random size between 5px and 25px
            const randomY = Math.random() * headerHeight;
            shape.style.width = `${size}px`;
            shape.style.height = `${size}px`;
            shape.style.left = `${midpoint + Math.random() * (headerWidth - midpoint)}px`;
            shape.style.top = `${randomY}px`;
            header.appendChild(shape);
        }

        // Function to display help dialogue
        function showHelp() {
            alert("Booking your flight is a breeze with our SkyReserve. Simply log in, choose your destination and dates, select your flight, provide passenger details, and make secure payment. Receive instant confirmation and electronic tickets, and you're ready to fly hassle-free.");
        }

        // Function to confirm logout
        function confirmLogout() {
            return confirm("Are you sure you want to log out?");
        }

        // Usage example
        if (confirmLogout()) {
            // If the user confirms the logout
            // Perform logout logic
            // For example, redirect to the logout page or clear user session
            window.location.href = "/"; // Redirect to logout page
        } else {
            // If the user cancels the logout
            // You can simply do nothing or provide a message
            alert("Logout canceled. You are still logged in.");
        }

    </script>

</body>

</html>